{
    // Workspaces
    "hyprland/workspaces": {
        "format": "{icon}",
        "separate-outputs": false,
        "active-only": false,
        // turn on true to show same all workspaces on each monitor
    "all-outputs": false,
        "format-icons": {
            "urgent": "ïª",
            "active": "ï†’"
            // "default": "ï„‘"
        },
        "persistent-workspaces": {
            "*": 5
        }
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    // Separator
    "custom/separator": {
        "format": "â”‚",
        "interval": "once",
        "tooltip": false
    },

    // Empty spacer
    "custom/empty": {
        "format": " "
    },
    
    // Cliphist
    "custom/cliphist": {
        "format": "ğŸ“‹",
        "on-click": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh",
        "on-click-right": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/dotfiles/scripts/cliphist.sh w",
        "tooltip": false
    },

    // Filemanager Launcher
    "custom/filemanager": {
        "format": "ğŸ“",
        "on-click": "thunar",
        "tooltip": false
    },

    // Calculator
    "custom/calculator": {
        "format": "ğŸ§®",
        "on-click": "qalculate-gtk",
        "tooltip": false
    },

    // Wofi Application Launcher
    "custom/appmenu": {
        "format": "Apps",
        "on-click": "sleep 0.2; wofi -show drun -replace",
        "on-click-right": "~/dotfiles/hypr/scripts/keybindings.sh",
        "tooltip": false
    },

    // Wofi Application Launcher (icon version)
    "custom/appmenuicon": {
        "format": "ğŸš€",
        "on-click": "wofi -show drun -replace",
        "on-click-right": "~/dotfiles/hypr/scripts/keybindings.sh",
        "tooltip": false
    },    

    // Power Menu
    "custom/exit": {
        "format": "â»",
        "on-click": "wlogout",
        "tooltip": false,
        // "icon-size": 21
    },

    // Keyboard State
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ğŸ”’",
            "unlocked": "ğŸ”“"
        }
    },

    // System tray
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },

    // Clock
    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    // System icon
    "custom/system": {
        "format": "ğŸ’»",
        "tooltip": false
    },

    // CPU
    "cpu": {
        "format": "CPU {usage}%",
        "on-click": "alacritty -e htop"
    },

    // Memory
    "memory": {
        "format": "RAM {}%",
        "on-click": "alacritty -e htop"
    },

    // Disk space
    "disk": {
        "interval": 30,
        "format": "ğŸ’¾ {percentage_used}%",
        "path": "/",
        "on-click": "alacritty -e htop"
    }, 

    // Keyboard layout
    "hyprland/language": {
        "format": "  {short}  ",
        "format-alt": "  {short}  "
    },

    // Group Hardware
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },        
        "modules": [
            "custom/system",
            "disk",
            "cpu",
            "memory"
            // "hyprland/language"
        ]
    },
    
    // Group Settings
    "group/settings": {
        "orientation": "horizontal",
        "modules": [
            "custom/settings"
        ]
    },

    // Group Quicklinks
    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [
            "custom/filemanager",
            "custom/calculator"
        ]
    },

    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "ğŸ“¶ {signalStrength}%",
        "format-ethernet": "ğŸŒ {ifname}",
        "format-disconnected": "âŒ",
        "tooltip-format": "ğŸŒ {ifname} via {gwaddri}",
        "tooltip-format-wifi": "ğŸ“¶ {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz",
        "tooltip-format-ethernet": "ğŸŒ {ifname}\nIP: {ipaddr}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "nm-connection-editor"
    },

    // Battery
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "âš¡ {capacity}%",
        "format-plugged": "ğŸ”Œ {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },

    // Pulseaudio
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon}ğŸ”Š",
        "format-bluetooth-muted": "ğŸ”‡ {icon}ğŸ”Š",
        "format-muted": "ğŸ”‡",
        "format-source": "{volume}% ğŸ¤",
        "format-source-muted": "ğŸ¤âŒ",
        "format-icons": {
            "headphone": "ğŸ§",
            "hands-free": "ğŸ“",
            "headset": "ğŸ§",
            "phone": "ğŸ“±",
            "portable": "ğŸ“±",
            "car": "ğŸš—",
            "default": ["ğŸ”ˆ", "ğŸ”‰", "ğŸ”Š"]
        },
        "on-click": "pavucontrol"
    },

    // Bluetooth
    "bluetooth": {
        "format": "ğŸ”µ {status}",
        "format-disabled": "",
        "format-off": "",
        "interval": 30,
        "on-click": "blueman-manager",
        "format-no-controller": ""
    },

    // User
    "user": {
        "format": "ğŸ‘¤ {user}",
        "interval": 60,
        "icon": false
    },

    // Idle Inhibitor
    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons": {
            "activated": "â°",
            "deactivated": "ğŸ’¤"
        },
        "on-click-right": "hyprlock"        
    },

    // Updates
    "custom/updates": {
        "format": "ğŸ”„ {}",
        // "exec": "checkupdates | wc -l",
        "interval": 300,
        "on-click": "alacritty -e sudo pacman -Syu"
    },

    // Welcome
    "custom/ml4w-welcome": {
        "format": "ğŸ‘‹",
        "on-click": "ml4w-welcome",
        "tooltip": false
    },

    // Power
    "custom/power": {
        "format" : "â» ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		}
    },
    "custom/activewindow": {
        "format": "ğŸªŸ {}",
        "exec": "hyprctl activewindow -j | jq -r '.class'",
        "interval": 2,
        "tooltip": true,
        "tooltip-format": "ğŸªŸ {exec}"
    },
    "mpris": {
        "format": "{player_icon} {title} - {artist}",
        "player-icons": {
            "default": "ğŸµ",
            "spotify": "ğŸ”´",
            "firefox": "ğŸŒ"
        },
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next"
    }
}